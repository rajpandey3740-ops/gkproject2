{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.2.20",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "nodeVersion": "20.x",
  "build": {
    "env": {
      "NODE_VERSION": "20.18.0"
    }
  }
}
